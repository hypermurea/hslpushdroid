<?xml version="1.0" encoding="utf-8"?>
<!-- Adapted from http://www.androidhive.info/2012/02/android-custom-listview-with-image-and-text/ , thanks -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

    <TextView
        android:id="@+id/lineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lineCode"
        android:layout_below="@+id/lineCode"
        android:layout_toLeftOf="@+id/trackLineImageButton"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/trackLineImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/lineCode"
        android:contentDescription="Seuraa häiriöitä"
        android:clickable="true"
        android:src="@drawable/favorite" />

    <ImageView
        android:id="@+id/transportImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/lineCode"
        android:adjustViewBounds="true"
        android:contentDescription="Liikenneväline"
        android:src="@drawable/lautta" />

    <TextView
        android:id="@+id/lineCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/trackLineImageButton"
        android:layout_toRightOf="@+id/transportImage"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />
 
</RelativeLayout>